  }

  .wall-title {
    font-size: 2.4rem;
    font-weight: 800;
    margin-bottom: 8px;
  }

  .wall-updated {
    color: #666;
  }

  .wall-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 12px;
  }

  .wall-grid span {
    background: #fff;
    border: 1px solid #e5e5e5;
    border-radius: 10px;
    padding: 12px 14px;
    font-size: 0.9rem;
