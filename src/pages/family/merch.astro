<style>
  /* ===================== */
  /* BASE */
  /* ===================== */

  .merch-page {
    min-height: 100vh;
    background: radial-gradient(circle at top, #1a1a1a, #000);
    padding: 120px 16px 40px;
    color: #fff;
  }

  .merch-wrapper {
    display: flex;
    justify-content: center;
  }

  .merch-container {
    max-width: 1100px;
    width: 100%;
  }

  /* ===================== */
  /* HEADER */
  /* ===================== */

  .merch-header {
    text-align: center;
    margin-bottom: 56px;
  }

  .merch-title {
    font-size: 2.4rem;
    margin-bottom: 12px;
  }

  .merch-intro {
    color: #cfcfcf;
    max-width: 680px;
    margin: 0 auto;
  }

  /* ===================== */
  /* GRID */
  /* ===================== */

  .merch-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
    gap: 32px;
  }

  /* ===================== */
  /* CARD */
  /* ===================== */

  .merch-card {
    background: #0f0f0f;
    border: 1px solid #2a2a2a;
    border-radius: 20px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition:
      transform 0.25s ease,
      box-shadow 0.25s ease;
  }

  .merch-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
  }

  /* ===================== */
  /* IMAGE */
  /* ===================== */

  .merch-image {
    position: relative;
    aspect-ratio: 8 / 5;
    background: #000;
    overflow: hidden;
  }

  .merch-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .merch-image.placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    background: linear-gradient(135deg, #111, #222);
  }

  .merch-badge {
    position: absolute;
    top: 16px;
    left: 16px;
    background: #e11d48;
    padding: 6px 12px;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 700;
  }

  /* ===================== */
  /* INFO */
  /* ===================== */

  .merch-info {
    padding: 24px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    flex-grow: 1;
  }

  .merch-info p {
    color: #cfcfcf;
  }

  /* ===================== */
  /* ACTIONS */
  /* ===================== */

  .merch-actions {
    margin-top: auto;
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .btn-primary {
    background: #e11d48;
    padding: 12px 20px;
    border-radius: 12px;
    font-weight: 700;
    text-decoration: none;
    color: #fff;
  }

  .merch-note {
    font-size: 0.85rem;
    color: #aaa;
  }

  /* ===================== */
  /* COMING SOON */
  /* ===================== */

  .coming-soon {
    opacity: 0.6;
  }

  .merch-soon {
    margin-top: auto;
    font-weight: 700;
    color: #aaa;
  }
</style>
