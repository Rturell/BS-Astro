<style>
  /* ===================== */
  /* BASE */
  /* ===================== */

  .videos-page {
    min-height: 100vh;
    background: radial-gradient(circle at top, #1a1a1a, #000);
    padding: 120px 16px 40px;
    color: #fff;
  }

  .videos-wrapper {
    display: flex;
    justify-content: center;
  }

  .videos-container {
    max-width: 1100px;
    width: 100%;
  }

  /* ===================== */
  /* RESTRICTED */
  /* ===================== */

  .restricted-wrapper {
    display: flex;
    justify-content: center;
  }

  .restricted-card {
    max-width: 640px;
    width: 100%;
    background: #0f0f0f;
    border: 1px solid #2a2a2a;
    border-radius: 16px;
    padding: 40px 32px;
    text-align: center;
  }

  .restricted-title {
    font-size: 1.8rem;
    font-weight: 800;
    margin-bottom: 16px;
  }

  .restricted-title span {
    display: block;
    color: #e11d48;
    margin-top: 8px;
  }

  .restricted-subtitle {
    color: #cfcfcf;
    margin-bottom: 24px;
  }

  .restricted-perks {
    list-style: none;
    padding: 0;
    margin: 0 auto 32px;
    max-width: 420px;
    text-align: left;
  }

  .restricted-perks li {
    padding: 6px 0;
  }

  .restricted-actions {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .btn-primary {
    background: #e11d48;
    padding: 12px;
    border-radius: 10px;
    font-weight: 700;
  }

  .btn-secondary {
    border: 1px solid #444;
    padding: 12px;
    border-radius: 10px;
  }

  /* ===================== */
  /* HEADER */
  /* ===================== */

  .videos-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .videos-title {
    font-size: 2.4rem;
    margin-bottom: 12px;
  }

  .videos-intro {
    color: #cfcfcf;
    max-width: 700px;
    margin: 0 auto;
  }

  /* ===================== */
  /* GRID */
  /* ===================== */

  .videos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 24px;
  }

  .video-card {
    background: #0f0f0f;
    border: 1px solid #2a2a2a;
    border-radius: 16px;
    padding: 20px;
    display: flex;
    flex-direction: column;
  }

  /* ===================== */
  /* VIDEO */
  /* ===================== */

  .video-embed {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    border-radius: 12px;
    overflow: hidden;
    background: #000;
    margin-bottom: 16px;
  }

  .video-embed iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .video-embed.placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    background: linear-gradient(135deg, #111, #222);
  }

  .video-card.coming-soon {
    opacity: 0.6;
  }

  .video-soon {
    margin-top: auto;
    font-weight: 700;
    color: #aaa;
  }
</style>
