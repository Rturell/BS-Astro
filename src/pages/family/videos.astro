<style>
  /* =========================
   PAGE BACKGROUND
========================= */
  .videos-page {
    min-height: 100vh;
    padding: 110px 20px 60px;
    color: #fff;
    background:
      radial-gradient(
        800px circle at 10% -10%,
        rgba(225, 29, 72, 0.18),
        transparent 40%
      ),
      radial-gradient(
        600px circle at 90% 20%,
        rgba(255, 120, 0, 0.14),
        transparent 45%
      ),
      linear-gradient(180deg, #0b0b0b 0%, #000 100%);
  }

  /* =========================
   WRAPPER
========================= */
  .videos-wrapper {
    display: flex;
    justify-content: center;
  }

  .videos-container {
    max-width: 1200px;
    width: 100%;
  }

  /* =========================
   BADGE
========================= */
  .badge-private {
    display: inline-block;
    margin-bottom: 30px;
    padding: 6px 14px;
    border-radius: 999px;
    font-size: 0.65rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: #e11d48;
    background: rgba(225, 29, 72, 0.15);
    border: 1px solid rgba(225, 29, 72, 0.4);
  }

  /* =========================
   HEADER
========================= */
  .videos-header {
    max-width: 820px;
    margin-bottom: 72px;
  }

  .videos-title {
    font-size: clamp(2.6rem, 4vw, 3.4rem);
    letter-spacing: 0.14em;
    margin-bottom: 30px;
  }

  .videos-intro {
    color: #cfcfcf;
    line-height: 1.6;
  }

  /* =========================
   GRID
========================= */
  .videos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 32px;
  }

  /* =========================
   VIDEO CARD
========================= */
  .video-card {
    position: relative;
    padding: 26px;
    border-radius: 24px;
    background: linear-gradient(
      180deg,
      rgba(20, 20, 20, 0.92),
      rgba(10, 10, 10, 0.92)
    );
    border: 1px solid rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(6px);
    box-shadow: 0 20px 55px rgba(0, 0, 0, 0.75);
    display: flex;
    flex-direction: column;
    transition:
      transform 0.35s ease,
      box-shadow 0.35s ease;
  }

  .video-card::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 24px;
    padding: 1px;
    background: linear-gradient(
      135deg,
      rgba(225, 29, 72, 0.55),
      rgba(255, 120, 0, 0.35),
      rgba(225, 29, 72, 0.55)
    );
    -webkit-mask:
      linear-gradient(#000 0 0) content-box,
      linear-gradient(#000 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
  }

  .video-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 35px 90px rgba(0, 0, 0, 0.9);
  }

  /* =========================
   VIDEO
========================= */
  .video-embed {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    border-radius: 16px;
    overflow: hidden;
    margin-bottom: 18px;
    background: #000;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.08);
  }

  .video-embed iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  /* Placeholder */
  .video-embed.placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    background:
      radial-gradient(
        200px circle at center,
        rgba(225, 29, 72, 0.25),
        transparent 60%
      ),
      linear-gradient(135deg, #111, #1a1a1a);
  }

  /* =========================
   TEXT
========================= */
  .video-card h3 {
    font-size: 1.15rem;
    margin-bottom: 10px;
  }

  .video-card p {
    color: #cfcfcf;
    line-height: 1.5;
  }

  /* =========================
   COMING SOON
========================= */
  .video-card.coming-soon {
    opacity: 0.65;
  }

  .video-soon {
    margin-top: auto;
    font-weight: 800;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    font-size: 0.7rem;
    color: #aaa;
  }
</style>
