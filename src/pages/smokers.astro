<style>
  /* =========================
   PAGE BACKGROUND
========================= */
  .smokers-page {
    min-height: 100vh;
    padding: 60px 20px 60px;
    color: #fff;
    background:
      radial-gradient(
        800px circle at 10% -10%,
        rgba(225, 29, 72, 0.18),
        transparent 40%
      ),
      radial-gradient(
        600px circle at 90% 20%,
        rgba(255, 120, 0, 0.15),
        transparent 45%
      ),
      linear-gradient(180deg, #0b0b0b 0%, #000 100%);
  }

  /* =========================
   BADGE
========================= */
  .badge-private {
    display: inline-block;
    margin-bottom: 30px;
    padding: 6px 14px;
    border-radius: 999px;
    font-size: 0.65rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: #e11d48;
    background: rgba(225, 29, 72, 0.15);
    border: 1px solid rgba(225, 29, 72, 0.4);
  }

  /* =========================
   RESTRICTED
========================= */
  .restricted-wrapper {
    display: flex;
    justify-content: center;
  }

  .restricted-card {
    max-width: 760px;
    width: 100%;
    text-align: center;
    padding: 56px 44px;
    border-radius: 28px;
    background:
      radial-gradient(
        400px circle at top,
        rgba(225, 29, 72, 0.2),
        transparent 60%
      ),
      linear-gradient(180deg, #121212, #0a0a0a);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 30px 90px rgba(0, 0, 0, 0.85);
  }

  .restricted-title {
    font-size: clamp(2.4rem, 4vw, 3.2rem);
    letter-spacing: 0.12em;
    margin-bottom: 20px;
  }

  .restricted-subtitle {
    color: #cfcfcf;
    margin-bottom: 24px;
    line-height: 1.6;
  }

  .restricted-perks {
    max-width: 520px;
    margin: 0 auto 28px;
    padding: 0;
    list-style: none;
    text-align: left;
  }

  .restricted-perks li {
    padding: 6px 0;
  }

  .restricted-note {
    font-size: 0.9rem;
    color: #aaa;
    margin-bottom: 32px;
  }

  /* =========================
   BUTTONS
========================= */
  .restricted-actions {
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .restricted-actions > .btn-primary {
    text-align: center;
  }

  .btn-primary,
  .member-card-btn {
    text-align: start;
    background: linear-gradient(135deg, #e11d48, #ff7a18);
    color: #fff;
    padding: 14px 26px;
    border-radius: 999px;
    font-weight: 800;
    letter-spacing: 0.05em;
    box-shadow:
      0 12px 35px rgba(225, 29, 72, 0.45),
      inset 0 0 0 1px rgba(255, 255, 255, 0.18);
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .btn-primary:hover,
  .member-card-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 20px 55px rgba(225, 29, 72, 0.65);
  }

  .btn-secondary {
    border: 1px solid rgba(255, 255, 255, 0.25);
    border-radius: 999px;
    padding: 14px;
    font-weight: 700;
    color: #fff;
  }

  /* =========================
   MEMBERS
========================= */
  .members-wrapper {
    display: flex;
    justify-content: center;
  }

  .members-container {
    max-width: 1200px;
    width: 100%;
  }

  .members-header {
    max-width: 820px;
    margin-bottom: 72px;
  }

  .members-title {
    font-size: clamp(2.6rem, 4vw, 3.4rem);
    letter-spacing: 0.14em;
    margin-bottom: 30px;
  }

  .members-intro {
    color: #cfcfcf;
    line-height: 1.6;
  }

  /* =========================
   CARDS
========================= */
  .members-sections {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 28px;
  }

  .member-card {
    position: relative;
    padding: 34px 30px;
    min-height: 260px;
    border-radius: 24px;
    background: linear-gradient(
      180deg,
      rgba(20, 20, 20, 0.9),
      rgba(10, 10, 10, 0.9)
    );
    border: 1px solid rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(6px);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.7);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .member-card::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 24px;
    padding: 1px;
    background: linear-gradient(
      135deg,
      rgba(225, 29, 72, 0.6),
      rgba(255, 120, 0, 0.4),
      rgba(225, 29, 72, 0.6)
    );
    -webkit-mask:
      linear-gradient(#000 0 0) content-box,
      linear-gradient(#000 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
  }

  .member-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 35px 90px rgba(0, 0, 0, 0.9);
  }

  .member-card.coming-soon {
    opacity: 0.7;
  }

  .cl-userButtonOuterIdentifier {
    pointer-events: none;
  }
</style>
