<style>
  .smokers-page {
    min-height: 100vh;
    background: radial-gradient(circle at top, #101010, #000);
    padding: 70px 16px 40px;
    color: #fff;
  }

  /* ===================== */
  /* RESTRICTED */
  /* ===================== */

  .restricted-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .restricted-card {
    max-width: 700px;
    width: 100%;
    background: #0f0f0f;
    border: 1px solid #2a2a2a;
    border-radius: 16px;
    padding: 40px 32px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.7);
    text-align: center;
  }

  .restricted-title {
    font-size: 1.8rem;
    font-weight: 800;
    letter-spacing: 0.04em;
    margin-bottom: 16px;
  }

  .restricted-title span {
    display: block;
    color: #e11d48;
    margin-top: 8px;
  }

  .restricted-subtitle {
    font-size: 1rem;
    color: #cfcfcf;
    margin-bottom: 24px;
  }

  .restricted-perks {
    list-style: none;
    padding: 0;
    margin: 0 auto 24px;
    max-width: 460px;
    text-align: left;
  }

  .restricted-perks li {
    padding: 6px 0;
    font-size: 0.95rem;
  }

  .restricted-note {
    font-size: 0.9rem;
    color: #aaa;
    margin-bottom: 28px;
  }

  /* ===================== */
  /* BUTTONS */
  /* ===================== */

  .restricted-actions {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .btn-primary {
    background: #e11d48;
    color: #fff;
    border-radius: 10px;
    padding: 12px;
    font-weight: 700;
  }

  .btn-primary:hover {
    background: #be123c;
  }

  .btn-secondary {
    border: 1px solid #444;
    border-radius: 10px;
    padding: 12px;
    font-weight: 600;
    color: #fff;
  }

  .btn-secondary:hover {
    background: #1f1f1f;
  }

  /* ===================== */
  /* MEMBERS */
  /* ===================== */

  .members-wrapper {
    display: flex;
    justify-content: center;
  }

  .members-container {
    max-width: 1100px;
    width: 100%;
  }

  .members-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .members-title {
    font-size: 2.4rem;
    margin-bottom: 12px;
  }

  .members-intro {
    color: #cfcfcf;
    max-width: 720px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* ===================== */
  /* CARDS */
  /* ===================== */

  .members-sections {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 24px;
  }

  .member-card {
    background: #0f0f0f;
    border: 1px solid #2a2a2a;
    border-radius: 16px;
    padding: 28px 24px;
    min-height: 220px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.6);
  }

  .member-card h3 {
    font-size: 1.3rem;
    margin-bottom: 12px;
  }

  .member-card p {
    color: #cfcfcf;
    font-size: 0.95rem;
    line-height: 1.5;
    margin-bottom: 24px;
  }

  .member-card-btn {
    background: #e11d48;
    color: #fff;
    padding: 10px 18px;
    border-radius: 10px;
    font-weight: 700;
    font-size: 0.9rem;
    align-self: flex-start;
  }

  .member-card-btn:hover {
    background: #be123c;
  }

  .member-card.coming-soon {
    opacity: 0.75;
  }

  .member-card-soon {
    margin-top: auto;
    font-weight: 700;
    color: #aaa;
    font-size: 0.9rem;
  }

  .cl-userButtonOuterIdentifier {
    pointer-events: none;
  }
</style>
