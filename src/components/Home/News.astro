---
const posts = await Astro.glob("../../pages/news/*.md");
---

<div id="news">
  <div class="container">
    <div class="flex justify-between mb-8">
      <h2 class="text-white text-4xl mb-4">Noticias</h2>
      <a href="/allnews" class="secondary-btn">Ver Todas</a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
      {
        posts
          .reverse()
          .slice(0, 3)
          .map((post) => (
            <article class="transition transform hover:-translate-y-1 motion-reduce:transition-none motion-reduce:hover:transform-none">
              <a href={post.url} class="card rounded-lg shadow-xl">
                <img class="card-img" src={post.frontmatter.img} alt="" />

                <div class="card-body">
                  <div class="card-date text-white uppercase">
                    {post.frontmatter.date}
                  </div>
                  <h3 class="font-bold text-xl my-2 text-yellow-500 uppercase">
                    {post.frontmatter.title}
                  </h3>
                  <p class="mb-5 text-white">{post.frontmatter.description}</p>
                </div>
              </a>
            </article>
          ))
      }
    </div>
  </div>
</div>

<style>
  #news {
    background-color: var(--color-black);
  }
  .card-img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
  }

  .card-date {
    font-size: 12px;
  }

  .card-body {
    background-color: rgb(38, 38, 38);
    padding: 30px;
  }
</style>
