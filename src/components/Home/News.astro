---
const posts = await Astro.glob("../../pages/news/*.md");
---

<div id="news">
    <div class="container">
        <div class="flex justify-between mb-4">
            <h2 class="text-4xl mb-4">Noticias</h2>
            <a href="/allnews" class="secondary-btn">Ver Todas</a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
            {
                posts.reverse().slice(0, 3).map((post) => (
                    <article>
                        <div class="card">
                            <div class="">{post.frontmatter.date}</div>
                            <h3 class="font-bold text-xl my-2">
                                {post.frontmatter.title}
                            </h3>
                            <p class="mb-5">{post.frontmatter.description}</p>
                            <a class="primary-btn" href={post.url}>
                                Leer MÃ¡s
                            </a>
                        </div>
                    </article>
                ))
            }
        </div>
    </div>
</div>

<style>

    #news {
        background-color: var(--color-black);
    }
    h2 {
        color: var(--color-white);
    }
    h3 {
        color: var(--color-red);
    }

    .card {
        background-color: var(--color-white);
        border-radius: 10px;
        padding: 30px;
    }
</style>
